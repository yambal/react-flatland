{
  "compilerOptions": {
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "./dist",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
      "./src/setupTests.ts",
      "./src/serviceWorker.ts",
      "./src/react-app-env.d.ts",
      "./src/index.tsx",
      "./src/App.tsx",
      "./src/App.test.tsx"
  ]
}